<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:padding="20dp">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/text_select_days_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите дни недели"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Группа чекбоксов -->
    <LinearLayout
        android:id="@+id/days_checkbox_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_select_days_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/checkbox_monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Понедельник"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox" />

        <CheckBox
            android:id="@+id/checkbox_tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вторник"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox" />

        <CheckBox
            android:id="@+id/checkbox_wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Среда"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox" />

        <CheckBox
            android:id="@+id/checkbox_thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Четверг"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox" />

        <CheckBox
            android:id="@+id/checkbox_friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пятница"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox" />

        <CheckBox
            android:id="@+id/checkbox_saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Суббота"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox" />

        <CheckBox
            android:id="@+id/checkbox_sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Воскресенье"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox" />

    </LinearLayout>

    <!-- Кнопка Далее -->
    <Button
        android:id="@+id/button_next_days"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button_blue"
        app:layout_constraintTop_toBottomOf="@id/days_checkbox_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
