<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название лекарства"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_medicine_substance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Действующее вещество" />

        <TextView
            android:id="@+id/tv_medicine_firm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Производитель" />

        <TextView
            android:id="@+id/tv_medicine_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Форма выпуска" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
