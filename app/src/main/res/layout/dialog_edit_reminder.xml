<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:padding="20dp">

    <AutoCompleteTextView
        android:id="@+id/auto_medicine_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Введите название лекарства"
        android:inputType="text"
        android:drawableEnd="@android:drawable/ic_menu_search"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />


    <!-- Описание -->
    <EditText
        android:id="@+id/edit_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Описание (необязательно)"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/auto_medicine_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Выберите дату"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:textColorHint="#888888"
        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
        app:layout_constraintTop_toBottomOf="@id/edit_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/text_start_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_save">
        <include
            android:id="@+id/include_dose_time"
            layout="@layout/item_dose_time" />
        <include
            android:id="@+id/include_reminder_time"
            layout="@layout/item_reminder_time"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toBottomOf="linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>