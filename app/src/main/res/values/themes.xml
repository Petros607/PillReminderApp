<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PillReminderApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorSecondary">@color/orange</item>

        <item name="android:textColorPrimary">@color/black</item> <!-- Цвет текста -->
        <item name="android:textColorSecondary">@color/orange</item>
        <item name="android:background">@color/light_orange</item>

    </style>
    <style name="CustomTimePickerDialog" parent="Theme.Material3.DayNight.Dialog">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Цвет текста и фона -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/light_orange</item>

        <!-- Режим выбора времени: спиннер -->
        <item name="android:timePickerMode">spinner</item>

        <!-- Кнопки -->
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>